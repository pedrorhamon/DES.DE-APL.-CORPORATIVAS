
public class Main {

	public static void main(String[] args) {
		
		int numberOfSides;
		Polygon triangle = FactoryPolygon.createPolygon(numberOfSides: 3);
		System.out.println(String.format("%S - %S", 3, triangle.getDescription()));
		
		Polygon square = FactoryPolygon.createPolygon(numberOfSides: 4);
		System.out.println(String.format("%S - %S", 4, square.getDescription()));
		
		Polygon pentagon = FactoryPolygon.createPolygon(numberOfSides: 5);
		System.out.println(String.format("%S - %S", 5, pentagon.getDescription()));
	}
}
